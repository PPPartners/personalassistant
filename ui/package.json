{
  "name": "personal-assistant-ui",
  "version": "1.0.1",
  "description": "Visual interface for PersonalAssistant task manager",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "release": "vite build && electron-builder --publish never",
    "release:publish": "vite build && electron-builder --publish always"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "date-fns": "^3.0.0",
    "electron-updater": "^6.7.3",
    "gray-matter": "^4.0.3",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.stefanpernek.personalassistant",
    "productName": "PersonalAssistant",
    "files": [
      "dist/**/*",
      "!dist/*.{dmg,zip,exe,AppImage,deb,rpm,blockmap,yml}",
      "!dist/mac-arm64",
      "!dist/builder-debug.yml",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "PPPartners",
      "repo": "personalassistant"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist"
    },
    "afterSign": "scripts/notarize.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PPPartners/personalassistant.git"
  }
}
